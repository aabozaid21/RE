@model RE.Models.Project

@{
    ViewBag.Title = "AssignProject";
    Layout = "~/Views/Shared/_Layout_home.cshtml";
}
<h1>.</h1>
<h2>AssignProject</h2>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.ID)
        

        <div class="form-group">
            <div class="col-md-6">
                @Html.HiddenFor(model => model.CustomerName)
        </div>
            
            </div>
   
   
    <div class="form-group">
        @Html.LabelFor(model => model.PMName, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-6">
            @Html.EditorFor(model => model.PMName, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.PMName, "", new { @class = "text-danger" })
        </div>
        <div class=" col-md-4">
            <input type="button" id="btnpopu" value="Search For PM" onclick="ShowPopup();" />
            <script type="text/javascript">

                ShowPopup = function () {
                    window.open('/Customer/search', "PopupWindow", 'width=400px,height=400px,top=150,left=250');
                }

            </script>

        </div>
    </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Assign, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-2">
                <div class="checkbox">
                    @Html.EditorFor(model => model.Assign)
                    @Html.ValidationMessageFor(model => model.Assign, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>


    <div class="form-group">
        <div class="col-md-10">
            @Html.HiddenFor(model => model.TLName)
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-10">
            @Html.HiddenFor(model => model.JEName)
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-10">
          @Html.HiddenFor(model => model.Name)
        </div>
    </div>

    <div class="form-group">
        @Html.HiddenFor(model => model.Description)
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-10">
            @Html.HiddenFor(model => model.Price)
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-10">
       @Html.HiddenFor(model => model.Date)
        </div>
    </div>
    

    <div class="form-group">
        <div class="col-md-10">
       @Html.HiddenFor(model => model.Code)
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-10">
            @Html.HiddenFor(model => model.Comment)
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-10">
            <div class="checkbox">
                @Html.HiddenFor(model => model.Approval)
            </div>
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-10">
            <div class="checkbox">
                @Html.HiddenFor(model => model.PMAccept)
            </div>
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-10">
            <div class="checkbox">
                @Html.HiddenFor(model => model.TLAccept)
            </div>
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-10">
            <div class="checkbox">
                @Html.HiddenFor(model => model.JEAccept)
            </div>
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-10">
            <div class="checkbox">
                @Html.HiddenFor(model => model.Delivered)
            </div>
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-10">
            @Html.HiddenFor(model => model.Feedback)
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Save" class="btn btn-default" />
        </div>
    </div>

}

<div>
    @Html.ActionLink("Profile", "Index")
</div>
