@model IEnumerable<RE.Models.Project>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout_admin.cshtml";
}


<h1>.</h1>
<h2>Admin Profile</h2>
@Html.ActionLink("Control Users", "ControlUser")
<br />
<p>
    @Html.ActionLink("Add Project", "AddProject")
</p>
<center>
    <div class="actor_info">
        <img src="~/img/1494361103_user.png">
        <p>
            <h5>
                @if (Session["ID"] != null)
                {@Session["UserName"]<br /> @Session["FirstName"] <br />@Session["LastName"] <br />@Session["Email"] <br />
                    @Session["Mobile"]<br />@Session["JobDescription"] }
            </h5>
        </p>
    </div>
</center>



<div class="col-md-10">
    <h4>All Request Projects</h4>
    <table class="table_admin">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CustomerName)
            </th>
            <th></th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th></th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>-</th>
            <th>
                @Html.DisplayNameFor(model => model.Date)
            </th>
            <th></th>
        </tr>
        @foreach (var item in Model)
        {
            
            if (item.Approval == false)
            {

                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.CustomerName)
                    </td>
                    <td></td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    
                    <td>
                        @Html.DisplayFor(modelItem => item.Description)
                    </td>
                
                    <td>
                        @Html.DisplayFor(modelItem => item.Date)
                    </td>
                    <td></td>
                    <td>
                        @Html.ActionLink("Approve", "ApproveProject", new { id = item.ID })
                    </td>
                </tr>

            }
            
        }
     
    </table>
</div>

<hr />
<div class="col-md-10">
    <h4>All Aproved and not Assigned Projects</h4>
    <table class="table_admin">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CustomerName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Date)
            </th>
            <th></th>
        </tr>
        @foreach (var item in Model)
        {
            if (item.Approval == true && item.Assign == false)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.CustomerName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Description)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Date)
                    </td>
                    <td>
                        @Html.ActionLink("Update", "UpdateProject", new { id = item.ID }) |
                        @Html.ActionLink("Delete", "DeleteProject", new { id = item.ID })
                    </td>
                </tr>
            }
        }
    </table>
</div>